{
    "extends": "./tsconfig.json",
     "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "types": [],
        "target": "ES2017",
        "strictPropertyInitialization": false,
        "baseUrl": "src",
        "paths": {
            "@core/*": ["app/core/*"],
            "@environments/*": ["environments/*"],
            "@common/*": ["app/common/*"],
            "@utils/*": ["app/utils/*"]
        }
    },
    "files": ["src/main.ts", "src/polyfills.ts"],
    "include": ["src/**/*.d.ts"],
    "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
